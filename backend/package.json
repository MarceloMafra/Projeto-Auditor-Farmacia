{
  "name": "auditor-digital-backend",
  "version": "1.0.0",
  "description": "Backend for Auditor Digital - Fraud Detection System",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate:mysql",
    "db:push": "drizzle-kit push:mysql",
    "seed": "tsx scripts/seed.ts",
    "detection:run": "tsx -e \"import { getDb } from './src/db'; import { runDetectionEngine } from './src/services/detection'; const db = await getDb(); const result = await runDetectionEngine(db); console.log(JSON.stringify(result, null, 2));\""
  },
  "keywords": [
    "fraud-detection",
    "auditing",
    "pharmacy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@trpc/server": "^11.0.0",
    "@trpc/client": "^11.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "aws-sdk": "^2.1513.0",
    "nodemailer": "^6.9.7",
    "twilio": "^3.93.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.1.2",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "axios": "^1.6.2",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node-schedule": "^2.1.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "vitest-coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "drizzle-kit": "^0.20.13"
  }
}
